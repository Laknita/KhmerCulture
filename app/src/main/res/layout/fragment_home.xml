<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="242dp"
        android:src="@drawable/khmer_culture" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_arrow" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/khmer_clothes"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/khmer_clothes"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/kmer_clothes" />

            <ImageView
                android:id="@+id/khmer_man"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/khmer_man" />

            <ImageView
                android:id="@+id/traditional_clothes"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@id/khmer_man"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/traditional_clothes" />

            <ImageView
                android:id="@+id/wedding_custom"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@id/khmer_clothes"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/wedding_costume" />

            <TextView
                android:id="@+id/culture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wedding_custom"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:text="Culture"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/apsara"
                android:layout_width="208dp"
                android:layout_height="123dp"
                android:layout_below="@id/culture"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/apsara_dance" />

            <ImageView
                android:id="@+id/amok"
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:layout_below="@id/culture"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/amok_food" />

            <ImageView
                android:id="@+id/monk_angkor"
                android:layout_width="191dp"
                android:layout_height="131dp"
                android:layout_below="@id/apsara"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/monk_angkor" />

            <ImageView
                android:id="@+id/scafe"
                android:layout_width="193dp"
                android:layout_height="112dp"
                android:layout_below="@id/amok"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/scafe_khmer" />

            <ImageView
                android:id="@+id/kun_khmer"
                android:layout_width="195dp"
                android:layout_height="120dp"
                android:layout_below="@id/monk_angkor"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/kun_khmer" />

            <ImageView
                android:id="@+id/musuim"
                android:layout_width="195dp"
                android:layout_height="120dp"
                android:layout_below="@id/scafe"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/khmer_musuim" />

            <ImageView
                android:id="@+id/instrument"
                android:layout_width="195dp"
                android:layout_height="120dp"
                android:layout_below="@id/musuim"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/khmer_instrument" />

            <ImageView
                android:id="@+id/rbam"
                android:layout_width="195dp"
                android:layout_height="120dp"
                android:layout_below="@id/musuim"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/rbam_khmer" />

        </RelativeLayout>

    </ScrollView>

</LinearLayout>




